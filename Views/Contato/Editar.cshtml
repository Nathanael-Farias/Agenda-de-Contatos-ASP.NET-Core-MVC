@model ProjetoMVC_DIO.Models.Contato

@{
    ViewData["Title"] = "Editar Contato";
}

<h1 class="text-center text-light">Editar Contato</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Editar" class="bg-purple p-4 rounded shadow-sm">
                <div class="form-group">
                    <label asp-for="Nome" class="control-label text-light"></label>
                    <input asp-for="Nome" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Telefone" class="control-label text-light"></label>
                    <input asp-for="Telefone" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Ativo" class="control-label text-light"></label>
                    <input type="checkbox" asp-for="Ativo" class="form-check-input" />
                </div>
                <div class="form-group mt-4">
                    <input type="submit" value="Editar" class="btn btn-primary w-100" />
                </div>
            </form>

            <div class="mt-3">
                <a asp-action="Index" class="btn btn-outline-light w-100">Voltar</a>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #5b2c6f;
    }

    h1 {
        color: #f4f4f4;
    }

    .bg-purple {
        background-color: #6a1b9a;
    }

    .btn-primary {
        background-color: #f57c00;
        border-color: #f57c00;
    }

    .btn-outline-light {
        color: #f4f4f4;
        border-color: #f4f4f4;
    }

    .btn {
        font-size: 1.1rem;
        padding: 0.5rem 1.5rem;
    }

    .w-100 {
        width: 100%;
    }

    .text-light {
        color: #f4f4f4;
    }
</style>
